<div class="container mx-auto mt-6 fullscreen">
  <div class="max-w-sm rounded overflow-hidden shadow-lg mx-auto">
    <img class="w-full" src="https://tailwindcss.com/img/card-top.jpg" alt="Sunset in the mountains">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= @article.title %></div>
      <p class="text-grey-darker text-base">
        <%= @article.content%>
      </p>
    </div>
    <div class="px-6 py-4">
      <span class="inline-block bg-grey-lighter rounded-full px-3 py-1 text-sm font-semibold text-grey-darker mr-2"><%= @article.author%></span>
      <span class="inline-block bg-purple-lighter rounded-full px-3 py-1 text-sm font-semibold text-grey-darker mr-2">#<%= @article.category.name%></span>
    </div>    
  </div>
  <%= link_to "Dashboard", admin_root_path, class: "container mx-auto text-2xl max-w-sm block mt-6" %>
  <%= link_to "Edit article", edit_admin_article_path(@article), class: "container mx-auto text-2xl max-w-sm block mt-6" %>
  <%= link_to "Delete article", admin_article_path(@article),  method: :delete, class: "container mx-auto text-2xl max-w-sm block mt-6" %>
</div>