<h1 text-center>Dashboard</h1>
<p><%= link_to "New Article", new_admin_article_path %></p>
<div class="container mx-auto px-4 mt-6">
  <% @articles.each do |article| %>
    <%= article.id %> | 
    <%= link_to article.title, admin_article_path(article) %> |
    <%= link_to "Edit", admin_article_path(article),  method: :patch, data: {confirm: 'Are you sure?'} %> | 
    <%= link_to "Delete", admin_article_path(article),  method: :delete, data: {confirm: 'Are you sure?'} %><br>
  <% end %>
</div>