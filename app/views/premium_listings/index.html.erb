<h1 class="text-center">Premium Articles page </h1>
<div class='container mx-auto mt-6'>
<% @premium.each do |pr| %>
  <div class='max-w-sm rounded overflow-hidden shadow-lg mx-auto mt-4'>
    <%= image_tag pr.image, class: 'w-32 mr-4' if pr.image.attached? %>
    <div class='px-6 py-4'>
        <div class='font-bold text-xl mb-2'><%= pr.title %></div>
        <p class='text-grey-darker text-base'>
        <%= simple_format(pr.content.truncate_words(80)) %>
        </p>
        <%= link_to "Read full article", premium_listing_path(pr), class: "container mx-auto text-xl max-w-sm block mt-6" %>

    </div>
  </div>
</div>
<% end %> 