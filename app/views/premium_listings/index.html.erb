<h1 class="text-center">Premium Articles page </h1>
<div class='container mx-auto mt-6'>
<% @premium.each do |article| %>
  <div id="<%= dom_id(article) %>" class='max-w-sm rounded overflow-hidden shadow-lg mx-auto mt-4'>
    <%= image_tag article.image, class: 'w-32 mr-4' if article.image.attached? %>
    <div class='px-6 py-4'>
        <div class='font-bold text-xl mb-2'><%= article.title %></div>
        <p class='text-grey-darker text-base'>
        <%= simple_format(article.content.truncate_words(80)) %>
        </p>
        <%= link_to "Read full article", premium_listing_path(article), class: "container mx-auto text-xl max-w-sm block mt-6" %>
    </div>
  </div>
</div>
<% end %> 